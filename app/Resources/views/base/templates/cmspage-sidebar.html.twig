        {{ renderPcgcHtmlBlock('Sidebar HTML', pageHtmlBlocks)|raw }}
    </aside>

    <section class="main col-xs-12 col-sm-9 col-md-8" >
        <h2>CMS + Sidebar - {{page.title}}</h2>
        {{ allowInlineEditor(page, 'content')|raw }}
    	<br/>
    	{{ renderPcgcComponents('Main 2', pageComponents)|raw }}
    	{{ renderPcgcComponents('Main 1', pageComponents)|raw }}
        {{ renderPcgcHtmlBlock('Main HTML', pageHtmlBlocks)|raw }}
    </section>
<!-- END templates\cmspage-sidebar.html.twig -->
{% endblock %}

