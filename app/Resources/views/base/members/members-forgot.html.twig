{% extends '@theme/base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block body %}
  <h1>Forgot Password</h1>
  {% if error %}
      <div>{{ error.message }}</div>
  {% endif %}

  <form action="{{ path('forgot_password') }}" method="post">
      {{form_row(form.email)}}
      <input type="submit" value="Send Request" />
  {{ form_end(form) }}
{% endblock %}
