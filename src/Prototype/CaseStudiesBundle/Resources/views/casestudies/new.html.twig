{% extends 'PrototypeAdminBundle:Control:admin.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}New Case Study{% endblock %}
{% block subtext %}Creates a new Case Study{% endblock %}

{% block body %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-sm-6 col-xs-12" >
            {{ form_row(form.title) }}
            {{ form_row(form.subtitle) }}
        </div>
        <div class="col-sm-6 col-xs-12" >
            {{ form_row(form.image) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.content) }}
            {{ form_row(form.fileUpload) }}
            <p><a href="/userfiles/files/casestudies/{{caseStudy.file}}">{{caseStudy.file}}</a></p>
        </div>
    </div>

    {{ form_widget(form) }}
    <div>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok" ></span>Save</button>
        <a href="{{ path('control_casestudies_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-triangle-left" ></span>Back
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}
