{% extends 'PrototypeAdminBundle:Control:admin.html.twig' %}
{% block title %}View Enquiry{% endblock %}
{% block subtext %}Read an enquiry message{% endblock %}

{% block body %}
<div id="print-me"></div>
<section>
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Read Mail</h3>
      </div><!-- /.box-header -->
      <div id="printarea" class="box-body no-padding">
        <div class="mailbox-read-info">
          <h3>{{enquiry.subject}}</h3>
          <h5>From: <a href="mailto:{{enquiry.email}}?subject=RE: {{enquiry.subject}}">{{enquiry.email}}</a> <span class="mailbox-read-time pull-right">{% if enquiry.createdAt %}{{ enquiry.createdAt|date("d M. Y H:i A")  }}{% endif %}</span></h5>
        </div><!-- /.mailbox-read-info -->
        <div class="mailbox-read-message">
          {{enquiry.message|nl2br}}
        </div><!-- /.mailbox-read-message -->
      </div><!-- /.box-body -->
     {#
      <div class="box-footer">
        <ul class="mailbox-attachments clearfix">
          <li>
            <span class="mailbox-attachment-icon"><i class="fa fa-file-pdf-o"></i></span>
            <div class="mailbox-attachment-info">
              <a href="#" class="mailbox-attachment-name"><i class="fa fa-paperclip"></i> Sep2014-report.pdf</a>
              <span class="mailbox-attachment-size">
                1,245 KB
                <a href="#" class="btn btn-default btn-xs pull-right"><i class="fa fa-cloud-download"></i></a>
              </span>
            </div>
          </li>
        </ul>
      </div><!-- /.box-footer -->
      #}
      <div class="box-footer">
        <div class="pull-right">
            {{ form_start(delete_form) }}
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            {{ form_end(delete_form) }}
          <!-- <button class="btn btn-default"><i class="fa fa-reply"></i> Reply</button> -->
          <!-- <button class="btn btn-default"><i class="fa fa-share"></i> Forward</button> -->
        </div>
        <a href="{{ path('control_enquiry_index') }}" class="btn btn-primary">
            <span class="glyphicon glyphicon-triangle-left" ></span>Back
        </a>
        <!-- <button class="btn btn-default"><i class="fa fa-trash-o"></i> Delete</button> -->
        <!-- <button class="btn btn-default"><i class="fa fa-print"></i> Print</button> -->
      </div><!-- /.box-footer -->
    </div><!-- /. box -->

</section>
{% endblock %}
