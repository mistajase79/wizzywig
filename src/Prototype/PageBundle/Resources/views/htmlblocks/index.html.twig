{% extends 'PrototypeAdminBundle:Control:admin.html.twig' %}
{% block title %}Htmlblocks Overview{% endblock %}
{% block subtext %}View all Htmlblocks{% endblock %}

{% block body %}
<a href="{{ path('control_htmlblocks_new') }}" class="btn btn-primary">
  <span class="glyphicon glyphicon-plus" ></span>Create HtmlBlocks
</a>
    <table class="datatable table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                {#<th>Html</th>#}
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for htmlBlock in htmlBlocks %}
            <tr>

                <td>{{ htmlBlock.id }}</td>
                <td>
                     {{htmlBlock.title }}
                     {% if multilingual %}<br/>{{ viewAvailableTranslations( htmlBlock ) }}{% endif %}
                </td>

                {#<td>{{ htmlBlock.html }}</td>#}
                <td>{% if htmlBlock.active %}Yes{% else %}No{% endif %}</td>
                <td>                    <a  href="{{ path('control_htmlblocks_edit', { 'id': htmlBlock.id }) }}" class="btn btn-primary">
                        <span class="glyphicon glyphicon-pencil zeromargin" ></span>
                    </a>
                    {% if multilingual %}
                    <a data-toggle="tooltip" title="Add Translation" href="{{ path('control_htmlblocks_translation_new', { 'id': htmlBlock.id }) }}" class="btn btn-primary">
                      <span class="glyphicon glyphicon-globe zeromargin" ></span>
                    </a>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
