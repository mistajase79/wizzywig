<div id="imagemanager_modal" class="modal modal-primary">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h5 class="modal-title">ProtoCMS Image Manager</h5>
      </div>
      <div class="modal-body">
          <div>
              <div class="btn-group pull-right" role="group" >
                  <form id="uploadfileform"  enctype="multipart/form-data" class="hideForm">
                      <input disabled type="file" name="image_manager[imageUpload]" id="uploadfileInput" />
                      <input type="hidden" id="image_manager_filePath" name="image_manager[filePath]" value="" />
                  </form>
                  <p id="imagemanager-uploadloader" style="display:none;"><img src="/control/ajax-loader-imagemanager.gif" alt="Loading..." /></p>
                  <a id="openfilebrowser" class="btn btn-primary"><i class="fa fa-upload" aria-hidden="true"></i> Upload</a>
                  <a id="refreshfilebrowser" class="btn btn-primary"><i class="fa fa-refresh" aria-hidden="true"></i> Refresh</a>
              </div>
              <div id="imagemanager-path"><i class="fa fa-folder-open" aria-hidden="true"></i> <span id="imagemanager-pathtext">/path/to/files</span></div>
              <br class="clear"/>
          </div>
          <div class="folder-wrapper">
            <div id="folder-content">
                <p id="imagemanager-ajaxloader"><img src="/control/ajax-loader-med.gif" alt="Loading..." /></p>
            </div>
            <input type="hidden" id="selected-image" value="" />
          </div>
          <div><p id="imagemanager-message"></p></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
        <button id="confirm-image" data-input="" type="button" class="btn btn-outline">Confirm</button>
      </div>
    </div>
  </div>
</div>
