{% extends 'PrototypeAdminBundle:Control:admin.html.twig' %}
{% block title %}Templates Overview{% endblock %}
{% block subtext %}View all templates{% endblock %}
{% block body %}

    <a href="{{ path('control_developer_templates_new') }}" class="btn btn-primary">
      <span class="glyphicon glyphicon-plus" ></span>Create Template
    </a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Template</th>
                <th>Filename</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for template in templates %}
            <tr>
                <td>{{ template.id }}</td>
                <td>
                    {{ template.title}}
                    <br/><span class="sm-text">{{ template.description}}</span>
                </td>
                <td>{{ template.templatefile}}</td>
                <td>{% if template.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a  href="{{ path('control_developer_templates_edit', { 'id': template.id }) }}" class="btn btn-primary">
						<span class="glyphicon glyphicon-pencil zeromargin" ></span>
					</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
